{
  "info": {
    "name": "Digital Service Hub API",
    "description": "Complete API collection for Digital Service Hub marketplace platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+919876543210\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Services",
      "item": [
        {
          "name": "Get All Services",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/services?serviceType=LVHF&page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["services"],
              "query": [
                {"key": "serviceType", "value": "LVHF"},
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Create Service",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Emergency Plumbing\",\n  \"description\": \"24/7 plumbing services\",\n  \"category\": \"plumbing\",\n  \"serviceType\": \"LVHF\",\n  \"industry\": \"home_services\",\n  \"pricingType\": \"fixed\",\n  \"basePrice\": 500,\n  \"bookingType\": \"instant\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/services",
              "host": ["{{base_url}}"],
              "path": ["services"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serviceId\": \"service_id_here\",\n  \"scheduledDate\": \"2024-12-01\",\n  \"scheduledTime\": \"10:00\",\n  \"location\": {\n    \"address\": {\n      \"street\": \"123 Main St\",\n      \"city\": \"Mumbai\",\n      \"zipCode\": \"400001\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings/create",
              "host": ["{{base_url}}"],
              "path": ["bookings", "create"]
            }
          }
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{base_url}}/bookings/user/me",
              "host": ["{{base_url}}"],
              "path": ["bookings", "user", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "RFQ",
      "item": [
        {
          "name": "Create RFQ",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Wedding Reception\",\n  \"description\": \"Need catering for 200 guests\",\n  \"category\": \"wedding_planning\",\n  \"eventType\": \"wedding\",\n  \"budget\": {\"min\": 100000, \"max\": 200000},\n  \"eventDate\": \"2024-12-15\",\n  \"guestCount\": 200\n}"
            },
            "url": {
              "raw": "{{base_url}}/rfq/create",
              "host": ["{{base_url}}"],
              "path": ["rfq", "create"]
            }
          }
        },
        {
          "name": "Submit Proposal",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quotedPrice\": 150000,\n  \"description\": \"Complete wedding package\",\n  \"deliverables\": [\"Catering\", \"Decoration\"],\n  \"timeline\": \"2 weeks\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/rfq/:rfqId/proposal",
              "host": ["{{base_url}}"],
              "path": ["rfq", ":rfqId", "proposal"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment Order",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookingId\": \"booking_id\",\n  \"amount\": 5000,\n  \"paymentMethod\": \"upi\",\n  \"gateway\": \"razorpay\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/create-order",
              "host": ["{{base_url}}"],
              "path": ["payments", "create-order"]
            }
          }
        }
      ]
    }
  ]
}
