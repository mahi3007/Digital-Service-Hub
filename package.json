{
  "name": "digital-service-hub",
  "version": "1.0.0",
  "description": "Unified Service Marketplace for Local and Event-Based Needs",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run build --prefix client",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": ["marketplace", "services", "booking", "events"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.5",
    "razorpay": "^2.9.2",
    "stripe": "^13.5.0",
    "axios": "^1.5.0",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.11.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
